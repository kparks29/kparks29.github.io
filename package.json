{
  "name": "portfolio",
  "version": "1.0.0",
  "watch": "sass",
  "scripts": {
    "sass": "node-sass --include-path scss ./main.scss > ./main.css",
    "babel": "babel main.jsx -o main.js -s --presets es2015",
    "watch-css": "nodemon -e scss -x \"npm run sass\"",
    "watch-js": "nodemon -e jsx -x \"npm run babel\"",
    "webserver": "http-server -p 9090 ./",
    "livereload": "live-reload --port 9091 ./",
    "serve": "parallelshell 'npm run babel' 'npm run livereload' 'npm run webserver' 'npm run watch-css' 'npm run watch-js'"
  },
  "dependencies": {
    "babel-cli": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "http-server": "^0.8.5",
    "live-reload": "^1.1.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0"
  }
}
